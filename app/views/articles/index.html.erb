<h1>Articles list</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article[:id]) %>
      <%= link_to 'trash', article_path(article[:id]),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'add a new article', new_article_path %>
